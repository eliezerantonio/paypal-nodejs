<%- include ("../partials/header.ejs") %>
    <%- include("../partials/homenavbar.ejs" ) %>


        <body>


            <div class="container">
                <h2 class="mt-5">Listagem de planos</h2>
                <hr>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                ID
                            </th>
                            <th>
                                Nome
                            </th>
                            <th>
                                Pre√ßo
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Acoes
                            </th>


                        </tr>
                    </thead>
                    <tbody>

                        <% plans.forEach(plan=>{ %>


                            <tr>
                                <td>
                                    <%=plan.id%>
                                </td>
                                <td>
                                    <%=plan.title%>
                                </td>
                                <td>AKZ
                                    <%=plan.value%>
                                </td>
                                <td>

                                    <% if(plan.deactivated){ %>
                                        Desactivado
                                        <%}else{%>
                                            Activo
                                            <% }%>
                                </td>

                                <td>
                                    <a href="/plans/deactivate/<%= plan.id %>">

                                        <% if(plan.deactivated){ %>
                                            Activar
                                            <%}else{%>
                                                Desactivar
                                                <% }%> %>
                                    </a>
                                </td>


                            </tr>

                            <%})%>
                    </tbody>
                </table>
            </div>
        </body>
